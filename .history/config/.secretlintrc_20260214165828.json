{
  "version": 1,
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
        "id": "@secretlint/secretlint-rule-no-homedir"
    },
    {
        "id": "@secretlint/secretlint-rule-no-dotenv",
        "options": {
            "allowFileNames": [".env.local", ".env.test", ".env.development", ".env.dev"]
        }
    },
    {
        "id": "@secretlint/secretlint-rule-secp256k1-privatekey",
        "options": {
            "allows": [
                "b38439f4563ac9400cd9e1833b428848f66bb0a0f1c531506a701479b80ded24"
            ]
        }
    },
    {
        "id": "@secretlint/secretlint-rule-pattern",
        "options": {
            "patterns": [
                {
                    "name": "credentials",
                    "patterns": [
                    "/password\\s*=\\s*(?<password>[\\w\\d!@#$%^&(){}\\[\\]:\";'<>,.?\/~`_+-=|]{1,256})\\b.*/",
                    "/apikey\\s*=\\s*(?<apikey>[\\w\\d]{8,})\\b.*/",
                    "/token\\s*=\\s*(?<token>[\\w\\d]{16,})\\b.*/"
                    ]
                }
            ]
        }
    }
  ],
  "allowMessageIds": [],
  "allowSecrets": [
    "/^b38439f4563ac9400cd9e1833b428848f66bb0a0f1c531506a701479b80ded24$/"
  ],
    "ignore": [
        "**/.git/**",
        "**/node_modules/**",
        "**/.secretlintrc/**",
        "**/.secretlintrc.{json,yaml,yml,js}/**",
        "**/.secretlintignore*/**",
        "**/*.md",
        "**/*.snap",
        "**/*.map",
        "**/CHANGELOG.md",
        "**/LICENSE",
        "**/dist/**",
        "**/.next/**",
        "**/coverage/**",
        "**/tmp/**",
        "**/*.min.*",
        "**/.history/**",
        "**/reports/**",
        "**/docs/reports/**"
    ]
}
